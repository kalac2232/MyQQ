<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_chat_me_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:layout_toLeftOf="@+id/iv_chat_headicon_me"
        android:background="@drawable/user_bubble_selector"
        android:text="把那些贩毒的关到小黑屋"
        android:textColor="#fff"/>

    <ImageView
        android:gravity="center"
        android:id="@+id/iv_chat_headicon_me"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/headimage_0" />

</RelativeLayout>