<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_chat_friend_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/iv_chat_headicon_friend"
        android:background="@drawable/friend_bubble_selector"
        android:text="把那些贩毒的关到小黑屋"
        android:textColor="#000"/>

    <ImageView
        android:gravity="center"
        android:id="@+id/iv_chat_headicon_friend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/headimage_0" />

</RelativeLayout>