<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
              android:id="@+id/ll_content"
    android:orientation="horizontal"
              >
    <ImageView
        android:id="@+id/iv_newest_headicon"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/headimage_7"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_newest_contact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:textStyle= "bold"
                android:text="此处显示联系人名称"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_newest_lasttime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="17:50"
                android:layout_alignParentRight="true"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_newest_lastmessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="此处显示消息"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_newsnumber"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="13dp"
                android:text="2"
                android:textSize="12sp"
                android:textColor="#fff"
                android:background="@drawable/newnumber_shape"

                android:layout_alignParentRight="true"
                android:gravity="center"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>
    </LinearLayout>
</LinearLayout>